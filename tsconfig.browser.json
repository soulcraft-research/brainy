{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/browser-build"
  },
  "include": [
    "src/brainyData.ts",
    "src/browserFramework.ts",
    "src/universal/**/*",
    "src/types/graphTypes.ts",
    "src/coreTypes.ts",
    "src/utils/embedding.ts",
    "src/utils/environment.ts",
    "src/utils/logger.ts",
    "src/utils/index.ts",
    "src/hnsw/**/*",
    "src/storage/**/*",
    "src/setup.ts"
  ],
