    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/cortex/**/*",
    "src/augmentations/**/*",
    "src/pipeline.ts",
    "src/sequentialPipeline.ts",
    "src/augmentationFactory.ts",
    "src/augmentationRegistry.ts",
    "src/augmentationRegistryLoader.ts",
    "src/chat/**/*",
    "src/mcp/**/*"
  ]
}